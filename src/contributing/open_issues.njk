<div class="libraries open-issues">
  <p>
    Sort by issue labels
    <select>
      {% for label in collections.issueLabels %}
        <option value="{{ label | replace(' ','-') }}">{{ label | capitalize }}</option>
      {% endfor %}
    <select>
  </p>
  <h3>Open Issues</h3>
   <ul>
    {% for key, library in libraries.open_issues %}
      <li>
        {{ key }}
        <ul class="issues-list">
        {% for issue in library %}
        {# {% set classes %}
        {% for label in issue.labels %}
          {{ label | lower | replace(' ', '-') }}
        {% endfor %}
        {% endset %} #}
        <li class="{{ issue.labels | join(",") }}"><a href="{{ issue.url }}">{{ issue.title }}</a>
            {% for label in issue.labels %}
              {% if label != 'None' %}
                <span class="issue-label tag-{{ label | lower | replace(' ', '-') }}">{{label}}</span>
              {% endif %}
            {% endfor %}
        </li>
        {% endfor %}
        </ul>
      </li>
    {% endfor %}
    </ul>
</div>
